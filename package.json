  "repository": {
    "type": "git",
    "url": "https://github.com/mrgentil/hrms.git"
  },
  "homepage": "https://github.com/mrgentil/hrms",
  "keywords": ["hrms", "nextjs", "react", "mysql", "prisma", "rbac", "dashboard"],
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:prisma\"",
    "dev:frontend": "next dev",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:prisma": "cd backend && npx prisma generate --watch",
    "build": "next build && cd backend && npm run build",
    "build:frontend": "next build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "next start",
    "start:backend": "cd backend && npm run start:prod",
    "lint": "next lint && cd backend && npm run lint",
    "backend": "cd backend && npm run start:dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:pull": "cd backend && npx prisma db pull",
    "db:push": "cd backend && npx prisma db push",
    "db:seed": "cd backend && npm run seed",
    "db:studio": "cd backend && npx prisma studio",
    "db:reset": "cd backend && npx prisma migrate reset",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:db:pull": "cd backend && npx prisma db pull",
    "prisma:db:push": "cd backend && npx prisma db push",
    "prisma:studio": "cd backend && npx prisma studio"
  },
