    "@tanstack/react-query-devtools": "^5.90.2",
    "apexcharts": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.12.2",
    "flatpickr": "^4.6.13",
    "jwt-decode": "^4.0.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-apexcharts": "^1.7.0",
