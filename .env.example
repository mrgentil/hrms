# --------------------------------------------------------------------------------------------------
# Exemple de configuration unique (.env) pour HRMS (frontend + backend)
# Copiez ce fichier vers .env et renseignez les valeurs appropri√©es.
# --------------------------------------------------------------------------------------------------

# Runtime
NODE_ENV=development

# Database
DATABASE_URL="mysql://username:password@localhost:3306/hrms_db"

# API / Server
PORT=3001
API_BASE_URL="http://localhost:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_AUTH_URL="http://localhost:3001/auth"
FRONTEND_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3000"

# Authentication / Sessions
JWT_SECRET="change-me-jwt-secret"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="change-me-jwt-refresh-secret"
JWT_REFRESH_EXPIRES_IN="30d"
SESSION_SECRET="change-me-session-secret"

# Uploads
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5MB"

# Email (exemple Gmail SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="your-email@gmail.com"
MAIL_FROM_NAME="HRMS"
CONTACT_TO_EMAIL="fallback-contact@example.com"

